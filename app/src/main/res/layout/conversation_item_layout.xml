<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y77"
    xmlns:tools="http://schemas.android.com/tools">
    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentView="@+id/rl_content"
        app:rightMenuView="@+id/right">
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/x45"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x14" />
            <com.wzx.studyhelper.widget.badgetextview.MaterialBadgeTextView
                android:id="@+id/tv_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x44"
                android:layout_marginTop="@dimen/y6"
                android:background="#EF4738"
                android:padding="2dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x12" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x18"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxWidth="@dimen/x210"
                    android:singleLine="true"
                    android:id="@+id/tv_user_name"
                    style="@style/text_16_000000"
                    android:text="官方通知" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxWidth="@dimen/x225"
                    android:singleLine="true"
                    android:id="@+id/tv_short_content"
                    style="@style/text_12_000000"
                    android:text="海星会把优质内容定时推送到这里" />
            </LinearLayout>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text ="2013-1-21"
                android:id="@+id/tv_time"
                style="@style/text_14_000000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light"
            android:orientation="horizontal">
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/tv_Settop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:gravity="center"
                android:padding="20dp"
                android:text="置顶" />
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FF3A3A"
                android:gravity="center"
                android:textColor="#ffffff"
                android:padding="20dp"
                android:text="删除" />
        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
    <View
        android:layout_alignParentBottom="true"
        android:background="#dfdfdf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"/>
</RelativeLayout>