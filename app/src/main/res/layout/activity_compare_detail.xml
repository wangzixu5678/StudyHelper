<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_sel_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x14"
                android:minHeight="@dimen/y60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="对比名称:"
                    android:textColor="#000"
                    android:textSize="@dimen/x16"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_compare_name"
                    style="@style/common_edit_nosingle_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x14"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请输入对比名称"
                    android:textColor="#000"
                    android:textSize="@dimen/x16" />
            </LinearLayout>

            <View style="@style/lineH1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.RecyclerView
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_select_compare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginRight="@dimen/x14"
                android:background="@drawable/btn_green"
                android:text="选择对比笔记"
                android:textColor="#fff"
                android:textSize="@dimen/x20" />

            <Button
                android:id="@+id/btn_delete_compare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginRight="@dimen/x14"
                android:background="@drawable/btn_red_bg"
                android:text="删除对比记录"
                android:textColor="#fff"
                android:textSize="@dimen/x20" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>